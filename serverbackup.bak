            # Remove each selected bookmark
            for idx in indices:
                if 0 <= idx < len(self.bookmarks):
                    del self.bookmarks[idx]
            
            # Update listbox
            listbox.delete(0, tk.END)
            for path in self.bookmarks:
                listbox.insert(tk.END, path)
                
            # Save to settings
            self.save_settings()
        
