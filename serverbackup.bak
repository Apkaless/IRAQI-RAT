    def update_uptime(self):
        """Update the uptime display"""
        if self.start_time is not None:
            current_time = time.time()
            uptime_seconds = int(current_time - self.start_time)
            
            # Format as HH:MM:SS
            hours, remainder = divmod(uptime_seconds, 3600)
