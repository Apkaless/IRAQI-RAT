            'type': item.get('type', 'Unknown'),
            'file': os.path.basename(item.get('source', '')),
            'size': item.get('size', '0 B'),
            'destination': item.get('destination', ''),
            'status': status,
            'duration': item.get('duration', '0s')
        }
        
        # Add to history
