                SELECT url, title, datetime(visit_date/1000000, 'unixepoch', 'localtime') 
                FROM moz_places p JOIN moz_historyvisits h ON p.id = h.place_id 
                ORDER BY visit_date DESC 
                LIMIT ?
            """, (limit,))
            
            for row in cursor.fetchall():
                history_items.append({
                    'url': row[0],
